module ProgramCounter (
    input wire clk,             // Clock input
    input wire reset,           // Reset signal (active high)
    output reg [31:0] pc        // Program counter output
);

    // Define the initial value of the program counter
    reg [31:0] initial_pc = 32'h00400000; // Change this value to your desired start address

    // Create a synchronous always block to increment the program counter
    always @(posedge clk or posedge reset) begin
        if (reset) begin
            pc <= initial_pc; // Reset the program counter to the initial value
        end else begin
            pc <= pc + 4;     // Increment the program counter by 4 every cycle
        end
    end

endmodule
